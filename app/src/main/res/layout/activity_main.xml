<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    android:weightSum="12"
    android:background="@color/background"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:weightSum="2"
    android:orientation="vertical"
    android:layout_weight="2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_weight="1"
        tools:ignore="Suspicious0dp">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/level_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current : 1"
                android:textSize="22sp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:gravity="center"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/total_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total : 10"
                android:textSize="22sp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:gravity="center"/>
        </FrameLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="00:00:00"
            android:gravity="center"
            android:textColor="#000000"/>
    </FrameLayout>

</LinearLayout>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="#EDEDED"
        android:layout_marginTop="10dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="40dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="15dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/question_view"
            android:layout_width="match_parent"
            android:paddingStart="22dp"
            android:paddingTop="20dp"
            android:layout_height="match_parent"
            android:textSize="22sp"
            android:textColor="#000000"
            android:text="1.Elementlar orasida joy qoldirish buyrug'ini tanlang"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5.8"
        android:orientation="vertical">
<RadioGroup
    android:id="@+id/answerGroup_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical">
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="padding"
            android:layout_weight="1"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:button="@null"
            android:elevation="11dp"
            android:paddingStart="15dp"
            android:background="@drawable/radio_button"
            android:textSize="22sp"
            android:padding="15dp"
            android:layout_marginTop="15dp"
            android:textColor="#000" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="margin"
            android:button="@null"
            android:padding="15dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:elevation="11dp"
            android:paddingStart="15dp"
            android:background="@drawable/radio_button"
            android:textSize="22sp"
            android:layout_marginTop="15dp"

            android:textColor="#000" />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="bottom padding"
            android:paddingStart="15dp"
            android:elevation="11dp"
            android:button="@null"
            android:padding="15dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/radio_button"
            android:textSize="22sp"
            android:textColor="#000" />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="bottom margin"
            android:button="@null"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:padding="15dp"
            android:elevation="9dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:paddingStart="15dp"
            android:background="@drawable/radio_button"
            android:textSize="22sp"
            android:textColor="#000" />
</RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="2"
        android:paddingBottom="20dp"
        android:orientation="horizontal"
        android:layout_weight="1.4">
        <Button
            android:id="@+id/finish_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:elevation="8dp"
            android:background="@drawable/skip_button_back"
            android:text="Finish"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/skip_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Skip"
            android:background="@drawable/skip_button_back"
            android:elevation="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <Button
        android:onClick="openLastActivity"
        android:id="@+id/next_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:textSize="20dp"
        android:background="@drawable/nextbuttonback"
        android:layout_weight="0.3"/>

</LinearLayout>